Header {
  background:purple;
  margin-bottom: 1;
  height: 3;
  dock: top;
  content-align: center middle;
}

#header-text {
  margin-top: 1;
  text-align: center;
  content-align: center middle;
}


#description {

  margin-top: 5;
  text-align: left;
  height: 20;
}

Footer {
  margin-top: 1;
  height: 3;
  dock: bottom;
}

